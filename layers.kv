#:kivy 1.0.9

<MainFrame>:
    Splitter:
        sizable_from: 'right'
        #keep_within_parent: in_parent_box.active
        #rescale_with_parent: rescale_box.active
        Display:
            id: disp_instance
    RightPane:

<RightPane>:
    orientation: 'vertical'

<Display>:
    Label:
        id: disp_lbl
        text: str(root.num_prop)

<Layer>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        size: self.size[0], 25
        Spinner:
            on_press: root.stuff()
            text: 'Blend mode'
            values: 'Add', 'Sub'
        Button:
        Button:
    Button:
        size_hint_y: None
        size: self.size[0], 40

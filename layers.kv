#:kivy 1.0.9

<MainFrame>:
    Splitter:
        sizable_from: 'right'
        #keep_within_parent: in_parent_box.active
        #rescale_with_parent: rescale_box.active
        Display:
            id: disp_instance
    RightPane:

<RightPane>:
    orientation: 'vertical'

<Display>:
    Label:
        id: disp_lbl
        text: str(root.num_prop)

<Layer>:
    size_hint_y: None
    size: self.size[0], 65
    orientation: 'vertical'
    # Top row
    BoxLayout:
        size_hint_y: None
        size: self.size[0], 25
        CheckBox:
            size_hint_x: None
            size: 25, self.size[1]
            group: 'layerselect'
        CheckBox:
            size_hint_x: None
            size: 25, self.size[1]
        Spinner:
            on_press: root.stuff()
            font_size: 10
            text: 'Blend mode'
            values: 'Add', 'Sub'
        Button:
            text: 'A'
            group: 'test'
        Button:
            text: 'B'
            group: 'test'
    # Lower fields
    BoxLayout:
        size_hint_y: None
        size: self.size[0], 40
        Label:
            id: thumb
            text: str(root.content)
            size_hint_x: None
            size: 40, self.size[1]
        ToggleButton:
            group: 'buttonselect'
